<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new"
    tools:context=".details2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView_logo_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/mini_logo_new" />


        <!--            android:layerType="software" />-->


        <ImageView
            android:id="@+id/dash_line"
            android:layout_width="399dp"
            android:layout_height="5dp"
            android:layout_below="@+id/imageView_logo_details"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/line"
            android:layout_marginBottom="1dp"
            android:src="@drawable/dash_line" />



        <ImageView
            android:id="@+id/line"
            android:layout_width="399dp"
            android:layout_height="5dp"
            android:layout_below="@+id/imageView_logo_details"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/term_image"
            android:layout_marginBottom="1dp"
            android:src="@drawable/line" />

        <ImageButton
            android:id="@+id/imageButton_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_logo_details"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="255dp"
            android:background="#00FFFFFF"
            android:scaleType="center"
            app:srcCompat="@drawable/play_sign" />


        <ImageView
            android:id="@+id/term_image"
            android:layout_width="399dp"
            android:layout_height="256dp"
            android:layout_below="@+id/imageView_logo_details"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="1dp" />

        <TextView
            android:id="@+id/textView_arb_term_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/term_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/helveticaneuebold"
            android:text="تجربة"
            android:textColor="@color/primary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_arb_def_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_arb_term_1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/helveticaneueroman"
            android:includeFontPadding="false"
            android:text="تجربة تجربة تجربة تجربة تجربة تجربة تجربة تجربة تجربة تجربة تجربة تجربة"
            android:textColor="@color/secondary"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/saparated_line"
            android:layout_width="399dp"
            android:layout_height="5dp"
            android:layout_above="@+id/textView_eng_term_1"
            android:layout_below="@+id/textView_arb_def_1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/saparated_line" />


        <TextView
            android:id="@+id/textView_eng_term_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_arb_def_1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/georgiabold"
            android:text="Test test"
            android:textColor="@color/primary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView_eng_def_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_eng_term_1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/georgia"
            android:paddingTop="5dp"
            android:text="Test test test test test test test test test test test test test test"
            android:textColor="@color/secondary"

            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/back_btn_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#00FFFFFF"
            android:scaleType="center"/>



    </RelativeLayout>



</ScrollView>